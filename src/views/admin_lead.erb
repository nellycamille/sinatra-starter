
  <div class="panel panel-default">
    <div class="panel-heading">
      <div class="pull-right" >

        <form class='form-inline' method="POST" action="/admin/leads/<%= @lead.id %>/change_status">
          <div class='form-group'>
            <label for="status">Est√°tus</label>
            <select id="status" class="form-control" name="status">
              <option value="0" <%= @lead.status == 0 ? "selected" : "" %>>Pendiente</option>
              <option value="1" <%= @lead.status == 1 ? "selected" : "" %>>Contactado</option>
            </select>
          </div>
          <button type="submit" class="btn btn-primary">
            <i class='fa fa-save'></i>
            Change
          </button>

        </form>


      </div>
      <h3 class="panel-title header-detailed">Datos del Cliente</h3>
    </div>
    <div class="panel-body panel-detailed">

        <table class="col-md-12">
          <tr>
            <th class="col-md-6">Nombre:</th>
            <th class="col-md-6"><%= @lead.name() %></th>
          </tr>
          <tr>
            <th class="col-md-6">Email:</th>
            <th class="col-md-6"><%= @lead.email() %></th>
          </tr>
          <tr>
            <th class="col-md-6">Servicio:</th>
            <th class="col-md-6"><%= @lead.servicio() %></th>
          </tr>
          <tr>
            <th class="col-md-6">Mensaje:</th>
            <th class="col-md-6"><%= @lead.message() %></th>
          </tr>
          <tr>
            <th class="col-md-6">Fecha del post:</th>
            <th class="col-md-6"><%= @lead.created_at() %></th>
          </tr>
      </table>

    </div>
  </div>


