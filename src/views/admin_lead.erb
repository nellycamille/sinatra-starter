<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title header-detailed">Comments</h3>
  </div>
  <div class="panel-body panel-detailed">

    <form method="POST" action="">

      <textarea name="comments" class='form-control' rows='4'></textarea>
      <br />
      <div class='text-right'>
          <button class='btn btn-primary'>
            <i class='fa fa-plus'></i>
            Add Comment
          </button>
      </div>

      <hr />

      <div class="comments-list">
        <% @lead.comments.each do | comment | %>
         <div class="media">
              <p class="pull-right">
               <small><%= comment.created_at.in_time_zone("America/La_Paz").strftime("%d/%m/%Y %H:%M") %> </small>
               <a href="/admin/leads/comments/<%= comment.id %>" class="btn btn-danger"><i class='fa fa-trash'></i></a>
              </p>
              <div class="media-left">
                <i class='fa fa-user' style='font-size:40px'></i>
              </div>
              <div class="media-body">

                <h4 class="media-heading user_name"><%= comment.user.username %></h4>
                <%= comment.comment %>

              </div>
          </div>
          <% end %>
      </div>

    </form>

  </div>
</div>
